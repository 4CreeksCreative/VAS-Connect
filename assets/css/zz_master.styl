.border-left-green
	border-left 1px $green solid
.move-up
	transform: translate(0px, -100px);

.btn > img.arrow-right
	height 20px
	position absolute
	right 10px
	top 0
	bottom 0
	margin auto
#social-share
	h1,h2,h3,h4,h5,h6
		line-height 35px
.social-icons
