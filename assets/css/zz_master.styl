@import 'zy_settings'

//normalize-css()
//base()
$headerHeight = 120px
$border = 1px $bordergray solid


// --- fonts
a,p,h1,h2,h3,h4,h5,h6,input,textarea,select,option,span,li,button
	font-family $uni !important
	font-weight 600
h1,h2
	font-weight 700
	margin-bottom 20px
h3,h4,h5,h6
	font-weight 600
	margin-bottom 20px
p,a,input,textarea,select,option,span,li
	font-weight 600

textarea, input[type]
	border-radius 0px
	border-bottom $darkBlue 2px solid
	border-top none
	border-right none
	border-left none
body
	.content,footer
		position relative
	.content,header,footer
		right 0
		transition 0.5s
body.custom-toggled-class
	.content,header,footer
		right 80vw
		transition 0.5s
.uppercase
	text-transform uppercase
.small
	font-size 14px
h1
	font-size 60px
	line-height 60px
	@media (max-width:767px)
		font-size 40px
		line-height 40px
h2
	font-size 48px
	line-height 1.1em
	@media (max-width:767px)
		font-size 32px
		line-height 36px
h3
	font-size 30px
	line-height 34px
	font-weight 600
h4
	font-size 24px
	line-height 32px
	font-weight 700
h5
	font-size 22px
	line-height 24px
	font-weight 600
h6, label
	font-size 18px
	line-height 28px
	font-weight 600
h5,h6
	max-width 670px
	margin-left auto
	margin-right auto
p,button,input,textarea
	font-size 15px
	font-weight 600 !important
	line-height 20px
p > a
	text-decoration underline
	color inherit
	font-weight 600
	&:hover
		color $blue
h1,h2,h3,h4,h5,h6,p
	margin-bottom 35px !important
	a
		color $blue
.btn
	margin 0

#blog-content, #about-content, section>.container>.row
	p:not([class*="color-"]), pre
		font-weight normal
		font-family $corbel
	pre
		white-space pre-line
		font-size 18px
		padding initial
		background initial
		border initial
		border-radius initial
		line-height 30px
		max-height initial
		max-width initial
		display block
		margin initial
		word-break initial
		word-wrap initial
		color $gray3

.weight-normal
	font-weight normal
.weight-500
	font-weight 500
.weight-600
	font-weight 600
.weight-700
	font-weight 700
.weight-800
	font-weight 800
.strong
	font-weight bold


section
	padding 100px 0 30px 0
	@media (max-width:992px)
		padding 75px 0 25px 0
	@media (max-width:767px)
		padding 50px 0 20px 0

.color-yellow
