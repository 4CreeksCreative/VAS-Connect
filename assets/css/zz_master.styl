// --- Footer




// --- main content area
body
	background $white
.content
	padding-top $headerHeight
	background $white






// --- queries
@media (max-width:990px)
	.menu-horizontal
		li
			display inline-block
			margin-right 15px
@media (max-width:767px)
	.custom-toggled-class
		right -100vw !important
		transition 0.5s
	#menu-overlay-toggle
		display block !important
	.content
		padding-top 56px
	.col-img-fix
		position relative
		min-height 300px
		margin 15px 0
	#updates-section
		margin-top -25px
	header
		height 56px
		a.logo
			height 40px
			img
				height 100% !important
		.stack-interface
			margin-top 5px
		#mega-menu

			top 0 !important
			li
				font-size 22px
				margin 0 0 10px 0
