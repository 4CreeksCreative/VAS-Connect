			margin-bottom 20px
.fa-times-thin:before
	content '\00d7'

.closeX
	color $white
	position absolute
	top 8px
	right 25px
	font-size 40px
	cursor pointer
.arrow-down
	box-sizing border-box
	height 20px
	width 20px
	border-top 2px solid #3F3F3F
	border-left 2px solid #3F3F3F
	opacity 0.5
	transform rotate(-135deg)
	transform-origin center center
	transition transform .2s
.arrow-up
	box-sizing border-box
	height 20px
	width 20px
	border-top 2px solid #3F3F3F
	border-left 2px solid #3F3F3F
	opacity 0.5
	transform-origin center center
	transform rotate(45deg)
	transition transform .2s
.square
	width 100%
	position relative
	&:after
		content ''
		display block
		padding-bottom 100%
	.background-image-holder
		background-size cover
.round
	//width 100%
	position relative
	&:after
		content ''
		display block
		padding-bottom 100%
	.background-image-holder
		border-radius 50%
		background-size cover

.iframe-container
	position relative
	padding-bottom 56.25%
	padding-top 25px
	height 0
	iframe
		position absolute
		top 0
		left 0
		width 100%
		height 100%
.border-right
