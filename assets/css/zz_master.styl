.check-mark-before, .check-mark-before-white
	position relative
	padding-left 35px
	&:before
		content ""
		width 20px
		height 20px
		background-position center right
		bottom 0
		top 0
		left 0px
		position absolute
		opacity 1
		margin auto
.check-mark-before:before
	background transparent url("../img/icon/check.png") no-repeat
	background-size contain
.check-mark-before-white:before
	background transparent url("../img/icon/check-white.png") no-repeat
	background-size contain
.video-play-icon
	transition 0.2s
	position relative
	&:before
		border none
		transition 0.2s
		content ""
		width 40%
		height 40%
		background transparent url("../img/icon/play.png") no-repeat center center
		background-size contain
		bottom 0
		right -12px
		top 0
		left 0
		position absolute
		display block
		opacity 1
		z-index 5
		margin auto
	&:hover
		background $green
		border-color $green
		transition 0.2s
	&:hover:before
		background transparent url("../img/icon/play-white.png") no-repeat center center
		background-size contain

