		background $blue




.btn-circle
	border-radius 999px
	padding 20px !important
	transition padding 0s







// --- header
.dropdown__content
	border-radius 0 !important
	//box-shadow none !important
	li
		padding 10px 20px
	a
		padding 10px 20px
#menu1
	width auto
	float none !important
	padding-top 10px
header
	height $headerHeight
	background $white
	position fixed
	z-index 10
	width 100%
	// div
	// 	position relative
	// 	height 100%
	a.logo
		height 75px
		position absolute
		z-index 5
		top 0
		bottom 0
		margin auto
		.logo
			height 75px


	.nav-container
		height 100%

	nav
		.currentPage
			color $gray !important
		#mini-menu
			a, .language
				text-transform none
				opacity 1
				color $gray3
